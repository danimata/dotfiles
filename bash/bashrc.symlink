#!/bin/bash
#
# Copied from mrsimo!
# https://github.com/mrsimo/dotfiles

export BASHDIR=~/dotfiles

for file in `ls $BASHDIR/**/*.bash` ; do
  . $file
done

source ~/.bash/basic
source ~/.bash/completions
source ~/.bash/paths
source ~/.bash/prompt
source ~/.bash/aliases


if [ -f ~/.localrc ]; then
  . ~/.localrc
fi

